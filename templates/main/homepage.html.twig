{% extends 'base.html.twig' %}
{% block title %}Starshop Homepage{% endblock %}
{% block body %}

<h1>Starshop! Your ideal place in the galaxy for finding starship parts!</h1>
    <div>
        Browse all {{ ships|length }} parts!
        {% if ships|length > 400 %}
        <p>That's a lot of parts...</p>
        {% endif %}
    </div>
    <div>
        <table>
            <tr>
                <th>Name</th>
                <td>
                    <a href="{{ path('app_starship_show', {
                        id: myShip.id
                    }) }}">{{ myShip.name }}</a>
                </td>
            </tr>
            <tr>
                <th>Class</th>
                <td>{{ myShip.class }}</td>
            </tr>
            <tr>
                <th>Captain</th>
                <td>{{ myShip.captain|title }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ myShip.status }}</td>
            </tr>
        </table>
    </div>

{% endblock %}